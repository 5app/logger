{
  "name": "@5app/logger",
  "version": "2.0.0",
  "description": "Logger used in 5app microservices",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "lint-fix": "eslint --fix ./",
    "lint-diff": "LIST=`git diff-index --name-only HEAD | grep '.*\\.js$';`; if [ \"$LIST\" ]; then eslint $LIST; fi",
    "precommit-msg": "echo 'Running pre-commit checks... (skip using --no-verify)' && exit 0",
    "test": "mocha"
  },
  "pre-commit": [
    "precommit-msg",
    "lint-diff"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5app/logger.git"
  },
  "keywords": [
    "logs",
    "logger"
  ],
  "author": "5app",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/5app/logger/issues"
  },
  "homepage": "https://github.com/5app/logger#readme",
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.4",
    "@semantic-release/git": "^8.0.0",
    "eslint": "^6.3.0",
    "eslint-config-5app": "^0.8.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^7.0.0",
    "pre-commit": "^1.2.2",
    "semantic-release": "^16.0.0"
  },
  "release": {
    "branch": "master",
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "chalk": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
